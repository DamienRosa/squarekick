<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="leagueData"
            type="com.dgr.squarekick.ui.home.LeaguesFixtures" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_country_flag"
            android:layout_width="@dimen/size_country_flag"
            android:layout_height="@dimen/size_country_flag"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_16"
            android:contentDescription="@string/country_flag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_competition_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_16"
            android:text="@{leagueData.league.country + '-' + leagueData.league.name}"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_country_flag"
            app:layout_constraintStart_toEndOf="@+id/iv_country_flag"
            app:layout_constraintTop_toTopOf="@+id/iv_country_flag"
            tools:text="Germany - Bundesleague" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_separator"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_total_games"
            style="@style/TextTotalGamesStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8"
            android:text="@{Integer.toString(leagueData.totalFixtures)}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_competition_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_competition_name"
            tools:text="99" />

        <TextView
            android:id="@+id/tv_active_games"
            style="@style/TextActiveGamesStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8"
            android:text="@{Integer.toString(leagueData.activeFixtures)}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_games"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_games"
            app:layout_constraintTop_toTopOf="@+id/tv_total_games"
            tools:text="99" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>