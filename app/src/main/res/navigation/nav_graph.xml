<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="@string/app_name"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menu_home">

    <fragment
        android:id="@+id/menu_home"
        android:name="com.dgr.squarekick.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_menu_home_to_leagueFixturesFragment"
            app:destination="@id/leagueFixturesFragment" />
    </fragment>

    <fragment
        android:id="@+id/menu_favourite"
        android:name="com.dgr.squarekick.ui.EmptyFragment"
        android:label="@string/menu_favourite"
        tools:layout="@layout/fragment_empty" />

    <fragment
        android:id="@+id/menu_statistics"
        android:name="com.dgr.squarekick.ui.EmptyFragment"
        android:label="@string/menu_statistics"
        tools:layout="@layout/fragment_empty" />

    <fragment
        android:id="@+id/leagueFixturesFragment"
        android:name="com.dgr.squarekick.ui.league.LeagueFixturesFragment"
        android:label="League"
        tools:layout="@layout/fragment_league_fixtures" >
        <action
            android:id="@+id/action_leagueFixturesFragment_to_gameDetailsFragment"
            app:destination="@id/gameDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameDetailsFragment"
        android:name="com.dgr.squarekick.ui.game.GameDetailsFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game_details" />

</navigation>